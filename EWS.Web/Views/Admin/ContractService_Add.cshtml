@model TOPS.Web.Areas.Admin.Models.TaxTypeViewModel

@{
    ViewBag.Title = "Quotations | Quotation Admin";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container-fluid">
    @Html.Partial("ValidationSummary", Model)
    <h2>Add new Tax Type</h2>
    <div class="pull-right bottom-gap-10">
        <a href="@Url.Action("Index")" class="btn btn-default throbber"><span class="glyphicon glyphicon-backward"></span>&nbsp;Back to List</a>
    </div>
    <div class="row">
        <div class="col-xs-12 bottom-gap-20">
            <div class="panel panel-default">
                <div class="panel-heading">
                    <h3 class="panel-title">Tax Type</h3>
                </div>
                <div class="panel-body">
                    @using (Html.BeginForm())
                    {
                        <div class="form-horizontal">
                            <div class="form-group">
                                @Html.LabelFor(model => model.Id, "Tax Type code (3 digit)", htmlAttributes: new { @class = "control-label col-md-2" })
                                <div class="col-sm-6  col-md-5 col-lg-4">
                                    @Html.EditorFor(model => model.Id, new { htmlAttributes = new { @class = "form-control" } })
                                </div>
                                <div class="col-sm-4 col-md-5 col-lg-6"></div>
                            </div>
                            <div class="form-group">
                                @Html.LabelFor(model => model.TaxTypeName, "Tax Type name", htmlAttributes: new { @class = "control-label col-md-2" })
                                <div class="col-sm-6  col-md-5 col-lg-4">
                                    @Html.EditorFor(model => model.TaxTypeName, new { htmlAttributes = new { @class = "form-control" } })
                                </div>
                                <div class="col-sm-4 col-md-5 col-lg-6"></div>
                            </div>
                            <div class="form-group">
                                @Html.LabelFor(model => model.CanBeDeleted, "Can be deleted", htmlAttributes: new { @class = "control-label col-md-2" })
                                <div class="col-sm-6  col-md-5 col-lg-4">
                                    <div class="checkbox">
                                        @Html.EditorFor(model => model.CanBeDeleted)
                                    </div>
                                </div>
                                <div class="col-sm-4 col-md-5 col-lg-6"></div>
                            </div>
                            <div class="form-group">
                                <div class="col-md-offset-2 col-md-10">
                                    <button type="submit" value="Create" class="btn btn-primary throbber">
                                        <span class="glyphicon glyphicon-floppy-disk"></span>&nbsp;Create
                                    </button>
                                </div>
                            </div>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>
