@model EWS.Domain.Model.Device[]


<div class="panel panel-default">
    <div class="panel-heading">
        <div class="row">
            <span class="col-xs-1 text-center">&nbsp;</span>
            <span class="col-xs-2">@Html.LabelFor(model => model.First().Modality)</span>
            <span class="col-xs-3" @Html.LabelFor(model => model.First().SubModality)</span>
            <span class="col-xs-2">@Html.LabelFor(model => model.First().Supplier)</span>
            <span class="col-xs-3">@Html.LabelFor(model => model.First().DisplayName)</span>
            <span class="col-xs-1">@Html.LabelFor(model => model.First().SID)</span>
        </div>
    </div>
    <div class="panel-body">
        @for (int i = 0; i < Model.GetLength(0); i++)
        {
            <div class="row form-group">
                <div class="col-xs-1 text-center">@Html.EditorFor(item => Model[i].Selected, new { @class = "form-control" }) </div>
                <div class="col-xs-2">@Html.DisplayFor(item => item[i].Modality, new { htmlAttributes = new { @class = "form-control form-control-greyed", @readonly = "readonly" } })</div>
                <div class="col-xs-3">@Html.DisplayFor(item => item[i].SubModality)</div>
                <div class="col-xs-2">@Html.DisplayFor(item => item[i].Supplier)</div>
                <div class="col-xs-3">@Html.DisplayFor(item => item[i].DisplayName)</div>
                <div class="col-xs-1">@Html.DisplayFor(item => item[i].SID)</div>
            </div>
        }
        </div>

    </div>
