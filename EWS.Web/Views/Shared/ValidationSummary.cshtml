@model ModelStateDictionary

@if (!Html.ViewData.ModelState.IsValid)
{ 
<div style="display:block;height:10px;"></div>
<div class="@(Html.ViewData.ModelState.IsValid ? "validation-summary-valid" : "validation-summary-errors") panel panel-default msgctrl"
     data-valmsg-summary="true">
    <div class="panel-heading text-">Messages</div>
    <div id="ValidationSummary" class="panel-body">
            @foreach (var modelError in Model.SelectMany(keyValuePair => keyValuePair.Value.Errors))
            {
                <span style="display:inline-block; margin-right:10px; padding-bottom:10px !important;">
                    <span class='label label-danger'>Error</span> <span class='text-danger'>@modelError.ErrorMessage</span>
                </span>
            }
    </div>
</div>
}